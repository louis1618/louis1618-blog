{
    "version": 2,
    "builds": [
        { "src": "client/dist/**/*", "use": "@vercel/static" },
        { "src": "index.js", "use": "@vercel/node" }
    ],
    "rewrites": [
        { "source": "/api/(.*)", "destination": "/index.js" },
        { "source": "/(.*)", "destination": "/client/dist/$1" }
    ]
}
